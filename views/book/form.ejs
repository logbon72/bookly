<h1>Add Book</h1>
<form ng-submit="addBook()">
  <label for="title">Title</label> <input type="text" ng-model="title" name="title" id="title"> <br><br>
  <label for="author">Author</label> <input type="text" ng-model="author" name="author" id="author"> <br><br>
  <select name="rating" id="rating" ng-model="rating" required> <br><br>
    <option value="">How good is this book</option>
    <option value="1">1 star</option>
    <option value="2">2 stars</option>
    <option value="3">3 stars</option>
    <option value="4">4 stars</option>
    <option value="5">5 stars</option>
  </select> <br><br>
  <label for="comment">Comment</label> <textarea ng-model="comment" name="comment" id="comment"></textarea> <br><br>
  <input type="submit" value="Submit">
</form>
